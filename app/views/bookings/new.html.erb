<!DOCTYPE html>
<html>
  <head>
    <title>YardSpace</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

  <!-- Latest compiled and minified JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-confirmation/1.0.5/bootstrap-confirmation.js"></script>
  </head>
  <body>
    <div class ="container-fluid">
      <%= render 'partials/navbar' %>
<div class="container">
<h1>Create a new Booking</h1>
  <div class="row">
    <div class="col-md-6">
      <h5>Yard you want to camp at:<%= @yard.title%></h5>
      <%= image_tag('http://i.imgur.com/5gkUOut.jpg ')%>
    </div>
    <div class="col-md-6">
      <h5>Host:<%= @host.name%> </h5>
      <%= image_tag('http://i.imgur.com/IulSm39.jpg')%>
    </div>
</div>
</hr><br /><br />

<%= form_for @booking,  :url => create_booking_path_url(@booking), html: {method: :post} do |f| %>
<div class="form-group row">
    <div class="control-label col-sm-4">
        <%= f.label :group_size, 'Group Size' %>
    </div>
    <div class="col-sm-8">
        <%= f.number_field :group_size, class: "form-control", autofocus: true %>
    </div>
  </div>
  <div class="form-group row">
      <div class="control-label col-sm-4">
          <%= f.label :pets_or_kids, 'small or fluffy campers?' %>
      </div>
      <div class="col-sm-8">
          <%= f.check_box :pets_or_kids, class: "form-control", autofocus: true %>
      </div>
    </div>
<div class="form-group row">
    <div class ="col-md-6 ">
        <%= f.label :start_date, 'Arrival Date' %>
        <%= f.date_field :start_date, class: "form-control" %>
      </div>
      <div class ="col-md-6 ">
        <%= f.label :end_date, 'Departure Date' %>
        <%= f.date_field :end_date, class: "form-control" %>


      </div>
</div>
<div class="form-group row ">
    <div class="col-md-12">
        <%= f.button :submit, name: "yard_id", value: @yard.id%>
    </div>
</div>
<%end%>
</div>

</body>
</html>
