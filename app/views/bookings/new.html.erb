<!DOCTYPE html>
<html>
  <head>
    <title>YardSpace</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

  <!-- Latest compiled and minified JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-confirmation/1.0.5/bootstrap-confirmation.js"></script>
  </head>
  <body>
    <div class ="container-fluid">
      <%= render 'partials/navbar' %>
      <br /><br />
<div class="container">
<h1>Create a new Booking</h1>
  <div class="row">
    <div class ="col-md-4">
      <br />
      <%= form_for @booking,  :url => create_booking_path_url(@booking), html: {method: :post} do |f| %>
      <div class ="form-group row">
        <div class="control-label col-sm-6">
          <%= f.label :group_size, 'Group Size' %>
        </div>
        <div class="col-sm-6">
          <%= f.number_field :group_size, class: "form-control", autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
        <div class="control-label col-sm-6">
          <%= f.label :pets_or_kids, 'Bringing kids or pets?' %>
        </div>
        <div class="col-sm-6">
          <%= f.check_box :pets_or_kids, class: "form-control", autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
        <div class ="col-md-12 ">
          <%= f.label :start_date, 'Arrival Date' %>
          <%= f.date_field :start_date, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class ="col-md-12 ">
          <%= f.label :end_date, 'Departure Date' %>
          <%= f.date_field :end_date, class: "form-control" %>
        </div>
      </div>
    <div class="form-group row ">
      <div class="col-md-12 text-center">
        <%= f.button :submit, name: "yard_id", value: @yard.id, class: "cool-btn"%>
      </div>
    </div>
    <%end%>
  </div>
    <div class="col-md-4 text-center">
      <h3><%= @yard.title%> - <%= @yard.city%></h3>
      <%=link_to yard_path_url(@yard) do %>
      <img class="city-pic" src="http://i.imgur.com/5gkUOut.jpg" alt="profile pic">
      <%end%>
        </div>
    <div class="col-md-4 text-center">
      <h3><%= @host.name%> --Age: <%= @host.age%></h3>
      <%=link_to user_path_url(@host) do %>
      <img class="book-prof profilePic" src="http://i.imgur.com/IulSm39.jpg" alt="profile pic">
      <%end%>
    </div>
</div>
</hr><br /><br />

</div>
<%= render 'partials/footer' %>

</body>
</html>
