<br /><br />
<div class="container">
  <div class="row">
    <div class="col-xs-4 prof-pic">
      <h2><%= @user.name%></h2>
      <img class="profilePic" src="http://i.imgur.com/IulSm39.jpg" alt="profile pic">
      <%if logged_in? && @user.id == current_user.id%>
          <%= link_to edit_user_path_url(@user) do %>
          <h3><span class=" glyphicon glyphicon-pencil"></span></h3>
          <%end%>

      <%else%>
      <%if logged_in? && @user.id != current_user.id%>
      <%= link_to new_message_path_url(:user_id => @user.id) do%>
       <h2><span class = "glyphicon glyphicon-envelope"></span></h2>
      <%end%>
        <%end%>
      <%end%>

    </div>
    <div class="col-xs-4 prof-info">
      <%if @user.is_hosting%>
      <h3 style="color:green">They are hosting campers!</h3>
      <%else%>
      <h3 style="color:red">Not hosting at the moment</h3>
      <%end%>
      <h4>Email: <%= @user.email%></h4>
      <h4>Age: <%= @user.age%></h4>
      <h4>Bio: <%= @user.bio%></h4>
      <h4>Gear: <%= @user.gear%></h4>
    </div>
    <div class="col-xs-4 prof-bookings text-center">
      <%if logged_in? && @user.id == current_user.id%>
      <h2 class>My Bookings</h2>
      <br /><%= button_to 'sent requests',sent_bookings_path_url(@user), method: 'get', class: 'cool-btn'%><br/>
      <%= button_to 'incoming requests',incoming_bookings_path_url(@user),  method: 'get', class: 'cool-btn'%><br/>
      <%end%>
    </div>
  </div>
  <h1 class ="text-center"> yards</h1>
  <%if logged_in? && @user.id == current_user.id%>
  <%= link_to new_yard_path_url, :method=>'get' do %>
  <h3 class = "text-center">
    <span class="cart glyphicon glyphicon-plus"></span><span>Add 1</span>
  </h3>
  <%end%>
  <%end%>
  <div class = "row">
  <% @yards.each do |yard|%>
  <div class = "col-xs-6 text-center">
  <%=link_to yard_path_url(yard) do %>
  <%= image_tag('http://i.imgur.com/5gkUOut.jpg')%>
  <%end%>
  <h3><%= yard.title%></h3>
  <%= yard.description%><br/>
  <%if yard.kid_and_pet_friendly%>
  <p>Kid and Pet friendly!</p>
  <%else%>
  <p>No pets or kids sadly</p>
  <%end%>
  <%if yard.fire_friendly%>
  <p>Campfires allowed!</p>
  <%else%>
  <p>No campfires</p>
  <%end%>
  <%= yard.city %>
  <%= yard.zipcode%>
  <%if logged_in? && @user.id == current_user.id%>
  <%= link_to destroy_yard_path_url(yard), :method=>'delete' do %>
  <h3>
    <span class="glyphicon glyphicon-remove"></span>
  <%end%>
  <%= link_to edit_yard_path_url(yard), :method=>'get' do %>
    <span class=" glyphicon glyphicon-pencil"></span>
  </h3>
  <% end %>
  <%end%>
  <hr/>
    </div>
  <%end%>
</div>
</div>
