<br>

<h1 align="center">Edit Your Profile</h1>
<br />

  <%=form_for @curr_user, :url => "/users/update/"+(@curr_user.id.to_s), :method => 'patch' do |f| %>
    <div class="container" id="newUserForm">
      <div class="form-group">
        <%= f.label :name, 'Name' %><br>
        <%= f.text_field :name, class: "form-control", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.label :email, 'Email' %><br>
        <%= f.text_field :email, class: "form-control", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.label :bio, 'About me' %><br>
        <%= f.text_field :bio, class: "form-control", placeholder: "Tell us about yourself", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.label :age, 'Age' %><br>
        <%= f.number_field :age, class: "form-control", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.label :image, 'Image URL here' %><br>
        <%= f.text_area :image, class: "form-control", autofocus: true, placeholder: 'upload an image onto imgur and upload here or copy a url' %>
      </div>
      <div class="form-group">
        <%= f.label :is_hosting, 'hosting campers currently?' %><br>
        <%= f.check_box :is_hosting, class: "form-control", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.label :is_traveling, 'looking for a place to camp currently?' %><br>
        <%= f.check_box :is_traveling, class: "form-control", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.label :gear, 'What gear do you have and/or need provided to you?' %><br>
        <%= f.text_field :gear, class: "form-control", autofocus: true %>
      </div>
      <div class="form-group" align= 'center' >
        <%= f.submit "Save Changes", class: 'btn btn-primary btn-sm'%>
      </div>
    </div>
  <% end %>
