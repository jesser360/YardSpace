<!DOCTYPE html>
<html>
  <head>
    <title>YardSpace</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

  <!-- Latest compiled and minified JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-confirmation/1.0.5/bootstrap-confirmation.js"></script>
  </head>
  <body>
    <div class ="container-fluid">

    <nav id="mainNav" class="nav navbar-default" role="navigation">
      <div class="row" >
        <ul class="nav_padding_right">
          <%= link_to 'Home', '/'%>
          <% if @curr_user %>
            <%= link_to 'Profile', user_path_url(@curr_user) %>
          <%= link_to 'Log Out', logout_path, method: :delete%>
          <% else %>
            <%= link_to 'Log In', login_path %>|
            <%= link_to 'Sign Up', signup_path %>
          <% end %>

      <div class="row">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Cities <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%=link_to 'SF-Bay Area', '/cities/sf_bay_area', controller: "yards"%></li>
              <li><%=link_to 'Santa Cruz', '/cities/santa_cruz', controller: "yards"%></li>
              <li><%=link_to 'Lake Tahoe', '/cities/lake_tahoe', controller: "yards"%></li>
              <li><%=link_to 'Yosemite', '/cities/yosemite', controller: "yards"%></li>
              <li><%=link_to 'Santa Barbara', '/cities/santa_barabara', controller: "yards"%></li>
              <li><%=link_to 'Sonoma', '/cities/sonoma', controller: "yards"%></li>
              <li><%=link_to 'Los Angeles', '/cities/los_angeles', controller: "yards"%></li>
            </ul>
          </li>
      </div>

    </nav>
    </div>


<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1><%=@yard.title%></h1>
      <p><%= @yard.rating || 0 %>
        stars by
        <%= @yard.r_count || 0%>
        people</p>
      <%= image_tag('http://i.imgur.com/5gkUOut.jpg')%><br/>
      <%= @yard.description%><br/>
      <%if @yard.kid_and_pet_friendly%>
      <p>Kid and Pet friendly!</p>
      <%else%>
      <p>No pets or kids sadly</p>
      <%end%>
      <%if @yard.fire_friendly%>
      <p>Campfires allowed!</p>
      <%else%>
      <p>No campfires</p>
      <%end%>
      <%= @yard.city %>
      <%= @yard.zipcode%>
    </br>
      <% if (logged_in? && @curr_user.id.to_s != @yard.user.id.to_s)%>
      <%= link_to 'camp here', new_booking_path_url(yard_id: @yard.id), :controller => 'bookings', :method => 'get' %>
      <%end%>
    </div>
    <div class="col-md-6">
      <h4>Owner:<%= @yard.user.name%></h4>
      <%=link_to user_path_url(@yard.user) do %>
      <%= image_tag('http://i.imgur.com/IulSm39.jpg')%><br/>
      <%end%>
    </div>
  </div>
<h2 class="text-center">Comments</h2>
  <% if logged_in?%>
    <div class ="add-comment-box">
      <%= form_for(:comment, :url => create_comment_path_url(@comment), html: {method: :post}) do |f| %>
      <%= f.text_area :title, placeholder: "title", :cols => "50", :rows=>"1"%><br />
      <%= f.text_area :body, placeholder: "write a review about "+ @yard.title, :cols => "80", :rows=>"2"%>
      <%= f.hidden_field :yard_id, :value => @yard.id.to_s%>
      <%= f.submit "post", :controller => 'comments'%>
    </div>
    <%end%>
    <% else %>
      <h4>sign up to join in the commenting fun</h4>
  <%end%>
<div class ="comment-box">
<%@comments.each do |comment| %>
<h3><%= comment.title%></h3>
<h4><%= comment.body%> by: <%= comment.user.name%></h4>
<% if (logged_in? && @curr_user.id.to_s == comment.user.id.to_s)%>
    <%= link_to destroy_comment_path_url(comment), :method=>'delete' do %>
    <span class="glyphicon glyphicon-remove" style="color:red"></span>
    <%end%>
  <%end%>
<%end%>
</div>
</div>

</body>
</html>
