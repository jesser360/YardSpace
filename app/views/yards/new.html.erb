<!DOCTYPE html>
<html>
  <head>
    <title>YardSpace</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

  <!-- Latest compiled and minified JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-confirmation/1.0.5/bootstrap-confirmation.js"></script>
  </head>
  <body>
    <div class ="container-fluid">

    <nav id="mainNav" class="nav navbar-default" role="navigation">
      <div class="row" >
        <ul class="nav_padding_right">
          <%= link_to 'Home', '/'%>
          <% if @curr_user %>
            <%= link_to 'Profile', user_path_url(@curr_user) %>
          <%= link_to 'Log Out', logout_path, method: :delete%>
          <% else %>
            <%= link_to 'Log In', login_path %>|
            <%= link_to 'Sign Up', signup_path %>
          <% end %>

      <div class="row">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Cities <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%=link_to 'SF-Bay Area', '/cities/sf_bay_area', controller: "yards"%></li>
              <li><%=link_to 'Santa Cruz', '/cities/santa_cruz', controller: "yards"%></li>
              <li><%=link_to 'Lake Tahoe', '/cities/lake_tahoe', controller: "yards"%></li>
              <li><%=link_to 'Yosemite', '/cities/yosemite', controller: "yards"%></li>
              <li><%=link_to 'Santa Barbara', '/cities/santa_barabara', controller: "yards"%></li>
              <li><%=link_to 'Sonoma', '/cities/sonoma', controller: "yards"%></li>
              <li><%=link_to 'Los Angeles', '/cities/los_angeles', controller: "yards"%></li>
            </ul>
          </li>
      </div>

    </nav>
    </div>


<h1 align="center">Create a new trade yard!</h1>

<br>

<div class="container" >
  <div class="col-md-12">
    <%= form_for Yard.new, :url => create_yard_path_url(@yard)  do |f|%>
      <div class="container" >
        <div class="form-group" id="newYardForm">

          <%= f.label :title, 'Title' %><br>
          <%= f.text_field :title, class: "form-control", placeholder: "quick title for yard" %>
          <br/>
          <%= f.label :description, 'Description' %><br>
          <%= f.text_area :description, placeholder: "tell people how great your yard is", class: "form-control" %>
          <br/>
          <label>Select a city</label>
          <select id="cityDropdown" class="form-control" name="yard[city]">
            <option value=-1></option>
            <option value=0>Sf-Bay Area</option>
            <option value=1>Santa Cruz</option>
            <option value=2>Lake Tahoe</option>
            <option value=3>Yosemite</option>
            <option value=4>Los Angeles</option>
            <option value=5>Santa Barbara</option>
            <option value=6>Sonoma</option>
          </select>
          <%= f.label :zipcode, 'Provide zipcode for better accuracy' %><br>
          <%= f.number_field :zipcode, class: "form-control" %>
          <br/>
          <%= f.label :kid_and_pet_friendly, 'Kids and Pets ok?' %><br>
          <%= f.check_box :kid_and_pet_friendly, class: "form-control" %>
          <br/>
          <%= f.label :fire_friendly, 'What about campfires?' %><br>
          <%= f.check_box :fire_friendly, class: "form-control" %>
          <br/>
          <%= f.submit "Add yard", class: 'btn btn-primary btn-md center-block', align:"right" %>
        </div>
      </div>
    <% end %>

  </div>
</div>

</body>
</html>
