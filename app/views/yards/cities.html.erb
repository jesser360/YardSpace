<!DOCTYPE html>
<html>
  <head>
    <title>YardSpace</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-confirmation/1.0.5/bootstrap-confirmation.js"></script>
  </head>
  <body>
    <%= render 'partials/navbar' %>

        <div class="row text-center weather">
          <div class="col-xs-2">
            <%= @day0_date%><br/>
            <%=image_tag('http://openweathermap.org/img/w/'+@day0_icon+'.png')%><br/>
            <%= @day0_des%>
            <p>Day:
              <%= @day0_temp%>
              F</p>
            <p>Night:
              <%= @night0_temp%>
              F</p>
          </div>
          <div class="col-xs-2">
            <%= @day1_date%><br/>
            <%=image_tag('http://openweathermap.org/img/w/'+@day1_icon+'.png')%><br/>
            <%= @day1_des%>
            <p>Day:
              <%= @day1_temp%>
              F</p>
            <p>Night:
              <%= @night1_temp%>
              F</p>
          </div>
          <div class="col-xs-2">
            <%= @day2_date%><br/>
            <%=image_tag('http://openweathermap.org/img/w/'+@day2_icon+'.png')%><br/>
            <%= @day2_des%>
            <p>Day:
              <%= @day2_temp%>
              F</p>
            <p>Night:
              <%= @night2_temp%>
              F</p>
          </div>
          <div class="col-xs-2">
            <%= @day3_date%><br/>
            <%=image_tag('http://openweathermap.org/img/w/'+@day3_icon+'.png')%><br/>
            <%= @day3_des%>
            <p>Day:
              <%= @day3_temp%>
              F</p>
            <p>Night:
              <%= @night3_temp%>
              F</p>
          </div>
          <div class="col-xs-2">
            <%= @day4_date%><br/>
            <%=image_tag('http://openweathermap.org/img/w/'+@day4_icon+'.png')%><br/>
            <%= @day4_des%>
            <p>Day:
              <%= @day4_temp%>
              F</p>
            <p>Night:
              <%= @night4_temp%>
              F</p>
          </div>
          <div class="col-xs-2">
            <%= button_to 'see more','https://weather.com/', class: "btn btn-large"%>
          </div>
        </div>
        <%if @yards.present?%>
          <%@yards.each do |yard|%>
          <%if yard.user.is_hosting == true%>
          <h3><%= yard.title%></h3>
            <%=link_to yard_path_url(yard) do %>
              <%= image_tag('http://i.imgur.com/5gkUOut.jpg')%>
            <%end%>
          <%if yard.kid_and_pet_friendly%>
            <p>Kid and Pet friendly!</p>
          <%else%>
            <p>No pets or kids sadly</p>
          <%end%>
          <%if yard.fire_friendly%>
            <span class = "glyphicon glyphicon-fire"></span><br />
          <%end%>
          <%= yard.zipcode%>
        <hr/>
          <%end%>
        <%end%>
        <%else%>
        <h3>OMG, no yards in this city, be the first</h3>
          <%if logged_in?%>
            <%= button_to 'post your yard',new_yard_path_url, :method=>'get'%>
          <%end%>
        <%end%>

      </body>
    </html>
